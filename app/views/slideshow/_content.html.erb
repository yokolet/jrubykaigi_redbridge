<link type="text/css" href="/stylesheets/page.css" rel="Stylesheet"/>
<link type="text/css" href="/stylesheets/blitzer/jquery-ui-1.8.2.custom.css" rel="Stylesheet"/>
<script type="text/javascript">
  $(function() {
    $("#accordion").accordion({
      fillSpace: true
    });
    $('#showcode').click(function() {
      $('#snippet').dialog({ autoOpen: false, modal: true, minWidth: 400 });
      var codeName = $(this).attr("value");
      $.post("/slideshow/dialog", { value: codeName }, null, "script");
      //alert(codeName);
      $('#snippet').dialog('open');
      return false;
    });
  });
</script>
<div id="snippet" title="Sample Code">
<!-- sample code -->
</div>
<div id="accordion">
  <% @pages.each do |page| %>
    <% idstring = "page=" + page.id.to_s %>
    <h3><a href="#"><%= page.title %></a></h3>
    <div id="<%= idstring %>">
      <%= page.body %>
    </div>
  <% end %>
</div>
